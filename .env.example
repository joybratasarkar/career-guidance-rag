# Environment Variables Template for Impacteers RAG System
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_CREDENTIALS_PATH=./xooper.json
PROJECT_ID=your-project-id
LOCATION=us-central1

# Database Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/impacteers_rag
REDIS_URL=redis://username:password@host:port/0

# Model Configuration
LLM_MODEL=gemini-2.0-flash-001
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-V2
LLM_TEMPERATURE=0.2

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_RETRIEVAL_DOCS=5
MAX_CONTEXT_LENGTH=2000
SIMILARITY_THRESHOLD=0.3

# API Configuration
API_TITLE=Impacteers RAG API
API_DESCRIPTION=RAG system for Impacteers career platform
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# System Configuration
LOG_LEVEL=INFO
MAX_CONVERSATION_HISTORY=5
ENABLE_CORS=true